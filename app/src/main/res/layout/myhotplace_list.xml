<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_myHotPlace"
            android:layout_width="150dp"
            android:layout_height="150dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="16dp"
            >
            <ImageButton
                android:id="@+id/btn_remove_hotPlace"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_gravity="end"
                android:src="@drawable/ic_delete_24dp"
                />
            <TextView
                android:id="@+id/tv_hotPlaceTag"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:textColor="#BBBBBB"
                />
            <TextView
                android:id="@+id/tv_hotPlaceComment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:gravity="center_vertical"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end">
                <ImageButton
                    android:id="@+id/btn_edit_hpComment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:src="@drawable/ic_create_black_24dp"
                    android:paddingEnd="12dp"
                    />
                <ImageButton
                    android:id="@+id/btn_open_instagram"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:src="@drawable/ic_launch_black_24dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>