<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorLineGray6</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.MainTheme">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:titleTextStyle">@style/ActionBarTextColor</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="ActionBarTextColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorLineGray6</item>
    </style>

    <style name="Regular_gray">
        <item name="android:textSize">14sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Regular">
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingExtra">17sp</item>
        <item name="android:textColor">#B4F3F1</item>
    </style>

    <!-- main에서 toolbar 쓰려고 actionbar 없애기 -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!--Status Bar 글자색깔-->
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- For Splash Screen -->

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_backgound</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
